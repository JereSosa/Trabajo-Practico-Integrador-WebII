extends ../layout

block contenido
  .max-w-xl.mx-auto.bg-white.shadow-md.rounded.p-6
    h1.text-2xl.font-bold.mb-4 Admisión de Paciente

    form(action="/admisiones" method="post" class="space-y-4")
      div
        label.block.text-sm.font-medium Nombre:
        input(type="text" name="nombre" required class="w-full border p-2 rounded")
      div
        label.block.text-sm.font-medium DNI:
        input(type="text" name="dni" required class="w-full border p-2 rounded")
      div
        label.block.text-sm.font-medium Sexo:
        select(name="sexo" required class="w-full border p-2 rounded")
          option(value="M") Masculino
          option(value="F") Femenino
      div
        label.block.text-sm.font-medium Motivo de Internación:
        textarea(name="motivo" rows="3" required class="w-full border p-2 rounded")

      button(type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600") Registrar