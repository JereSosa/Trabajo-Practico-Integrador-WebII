extends ../layout

block contenido
  .max-w-xl.mx-auto.mt-20.bg-white.p-8.rounded-xl.shadow-xl.text-gray-900
    h2.text-3xl.font-bold.mb-6.text-blue-800 Admisión de Paciente

    form(action="/admisiones" method="post" class="space-y-4")
      label.block.mb-1 Nombre:
      input(type="text" name="nombre" required class="w-full border p-2 rounded")

      label.block.mb-1 Dirección:
      input(type="text" name="direccion" required class="w-full border p-2 rounded")

      label.block.mb-1 Teléfono:
      input(type="text" name="telefono" required class="w-full border p-2 rounded")

      label.block.mb-1 Contacto de Emergencia:
      input(type="text" name="contacto_emergencia" required class="w-full border p-2 rounded")

      label.block.mb-1 Fecha de Nacimiento:
      input(type="date" name="fecha_nacimiento" required class="w-full border p-2 rounded")

      label.block.mb-1 Obra Social:
      input(type="text" name="obra_social" class="w-full border p-2 rounded")

      label.block.mb-1 Sexo:
      select(name="sexo" required class="w-full border p-2 rounded")
        option(value="" disabled selected) Selecciona…
        option(value="M") Masculino
        option(value="F") Femenino

      label.block.mb-1 DNI:
      input(type="text" name="dni" class="w-full border p-2 rounded")

      label.block.mb-1 Tipo de Sangre:
      select(name="tipo_sangre" required class="w-full border p-2 rounded")
        option(value="" disabled selected) Selecciona…
        option(value="O+") O+
        option(value="O-") O-
        option(value="A+") A+
        option(value="A-") A-
        option(value="B+") B+
        option(value="B-") B-
        option(value="AB+") AB+
        option(value="AB-") AB-

      label.block.mb-1 Motivo de Internación:
        textarea(name="motivo" rows="3" required class="w-full border p-2 rounded")

      button(type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 rounded")
        | Registrar Admisión

      a(href="/inicio" class="block text-center mt-4 bg-gray-700 hover:bg-gray-800 text-white font-semibold py-2 rounded shadow transition")
        i.fas.fa-arrow-left.mr-2
        | Volver al inicio  
